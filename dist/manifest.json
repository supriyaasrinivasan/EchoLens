{
  "manifest_version": 3,
  "name": "EchoLens",
  "version": "1.0.0",
  "description": "The Web Remembers What You Forgot — Your digital memory layer for contextual browsing",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "unlimitedStorage",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "EchoLens — Your Digital Memory"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "dashboard.html", "sql-wasm.wasm"],
      "matches": ["<all_urls>"]
    }
  ],
  "options_page": "dashboard.html"
}
